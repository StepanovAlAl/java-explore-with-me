	"item": [
		{
			"name": "1. Публикация события",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200 && pm.response.json().state === 'PUBLISHED') {",
							"    pm.test(\"Событие уже опубликовано\", function () {",
							"        pm.expect(pm.response.json().state).to.equal('PUBLISHED');",
							"    });",
							"} else if (pm.response.code === 200) {",
							"    pm.test(\"Событие опубликовано\", function () {",
							"        pm.expect(pm.response.json().state).to.equal('PUBLISHED');",
							"    });",
							"} else {",
							"    pm.test(\"Статус код 200 или 409\", function () {",
							"        pm.expect(pm.response.code === 200 || pm.response.code === 409).to.be.true;",
							"    });",
							"}"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"stateAction\": \"PUBLISH_EVENT\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/admin/events/{{eventId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"admin",
						"events",
						"{{eventId}}"
					]
				}
			},
			"response": []
		},
